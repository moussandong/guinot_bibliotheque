{% extends 'base.html.twig' %}

{% block title %}
	Livre
{% endblock %}

{% block body %}


	<h1>
		Livre
	</h1>


	<dl class="row">
		<dt class="col-2">
			Id
		</dt>
		<dd class="col-10">
			{{ livre.id }}
		</dd>
		<dt class="col-2">
			Title
		</dt>
		<dd class="col-10">
			{{ livre.title }}
		</dd>
		<dt class="col-2">
			Cote
		</dt>
		<dd class="col-10">
			{{ livre.cote }}
		</dd>
		<dt class="col-2">
			Availability
		</dt>
		<dd class="col-10">
			{{ livre.availability ? 'Yes' : 'No' }}
		</dd>
		<dt class="col-2">
			Picture
		</dt>
		<dd class="col-10">
			{{ livre.picture }}
		</dd>
		<dt class="col-2">
			Audttor
		</dt>
		<dd class="col-10">
			{{ livre.authtor }}
		</dd>
		<dt class="col-2">
			Special
		</dt>
		<dd class="col-10">
			{{ livre.special ? 'Yes' : 'No' }}
		</dd>
	</dl>


	
		<a class="btn btn-success" href="{{ path('livre_index') }}">
			back to list
		</a>
		{% if is_granted('ROLE_VOLONTEER') %}
			<a class="btn btn-primary" href="{{ path('livre_edit', {'id': livre.id}) }}">
				edit
			</a>
			<a>
				{{ include('livre/_delete_form.html.twig') }}
			</a>
		{% endif %}

	
{% endblock %}
