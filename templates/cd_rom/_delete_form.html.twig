<form method="post" action="{{ path('c_d_rom_delete', {'id': c_d_rom.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ c_d_rom.id) }}">
    {% if is_granted('ROLE_VOLONTEER') %}
        <button class="btn">Delete</button>
    {% endif %}
</form>
